<div class="marquee-wrapper">
  <div class="marquee">
    <p>USE CODE: 'Welcome10' TO GET 10% OFF ON YOUR FIRST ORDER</p>
  </div>
</div>

<style>
  .sliding-top-bar {
    width: 100%;
    background-color: #f6f6f8;
    padding: 10px 0;
    color: black;
    text-align: center;
    z-index: 9999;
    transition: top 0.5s ease-in-out;
  }

  .sliding-top-bar-content p {
    margin: 5px 0;
    font-size: 16px;
  }
  .marquee-wrapper {
     background-color: #f6f6f8;
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.marquee {
  font-family:Montserrat;
  position: absolute;
 font-size:12px;
  top:5px;
    color: black;
  white-space: nowrap;
  animation: scroll-right 10s linear infinite;
}

@keyframes scroll-right {
  0% {
    transform: translateX(-50%);
  }
  100% {
    transform: translateX(100%);
  }
}
</style>
